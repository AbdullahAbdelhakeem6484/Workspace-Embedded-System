#include"macros.h"
#include"STD_Types.h"
#include<avr/io.h>
#include"DIO_interface.h"

void __vector_11(void)  __attribute__((signal,used,externally_visible));
void led_func(void);
void btn_func(void);
void wdg_refresh(void);
void StartOS(void);
void Scheduler(void);

u32 OVF_count;

typedef enum {
	paused=0,
	running,
}stateType;

typedef struct{
	u32 firstDelay;
	u32 priodicity;
	void (*codePtr)(void);
	stateType task_state;
}task_type;

task_type *tasks_arr[3] = {0};



int main (void)
{
	task_type led_task;
	task_type btn_task;
	task_type wdg_task;

	DDRD = 0xff;

	DDRA = 0x00;
	PORTA = 0xFF;

//	WDTCR = 0b00001101;

	led_task.firstDelay = 0;
	led_task.priodicity = 1000;
	led_task.codePtr    = led_func;
	led_task.task_state = running;

	btn_task.firstDelay = 0;
	btn_task.priodicity = 200;
	btn_task.codePtr    = btn_func;
	btn_task.task_state = running;

	wdg_task.firstDelay = 0;
	wdg_task.priodicity = 400;
	wdg_task.codePtr    = wdg_refresh;
	wdg_task.task_state = paused;


	tasks_arr[0]=&led_task;
	tasks_arr[1]=&btn_task;
	tasks_arr[2]=&wdg_task;

	StartOS();

	while(1);

	return 0;
}


void Scheduler(void)
{

	u8 i;
	for(i=0;i<2;i++)
	{
		if(tasks_arr[i]!=0)
		{
			if(tasks_arr[i]->task_state==running)
			{
				if(tasks_arr[i]->firstDelay==0)
				{
					tasks_arr[i]->codePtr();
					tasks_arr[i]->firstDelay=tasks_arr[i]->priodicity-1;

				}
				else
				{
					tasks_arr[i]->firstDelay--;
				}
			}

		}

	}
}


void __vector_11(void)
{
	OVF_count++;
	if(OVF_count==47)
	{
		OVF_count=0;
		TCNT0=32;
		Scheduler();
	}



}


void StartOS(void)
{
	TCNT0=32;

	//• Bit 6, 3 – WGM01:0: Waveform Generation Mode
	CLEAR_BIT(TCCR0,6);
	CLEAR_BIT(TCCR0,3);
	//• Bit 2:0 – CS02:0: Clock Select clkI/O/(No prescaling)
	SET_BIT(TCCR0,0);
	CLEAR_BIT(TCCR0,1);
	CLEAR_BIT(TCCR0,2);
	//• Bit 0 – TOIE0: Timer/Counter0 Overflow Interrupt Enable
	SET_BIT(TIMSK,0);

	SET_BIT(SREG,7);
}

void led_func(void)
{
	static u8 x = 1;

	PORTD = x;

	if(x == 0x80)
	{
		x = 1;
	}
	else
	{
		x = x << 1;
	}
}

void btn_func(void)
{
	static u8 x = 0;
	static u8 arr[2];

	if(x == 0)
	{
		arr[x] = DIO_u8GetPinValue(PORT_A,PIN_0);
		x = 1;
	}
	else if (x == 1)
	{
		arr[x] = DIO_u8GetPinValue(PORT_A,PIN_0);
		x = 0;
		if( (arr[0]==0) && (arr[1]==0) )
		{
			while(1);
		}
	}

}

void wdg_refresh(void)
{
	asm("WDR");
}
