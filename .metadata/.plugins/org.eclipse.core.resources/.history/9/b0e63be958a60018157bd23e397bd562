#include"../lib/STD_Types.h"
#include"../lib/macros.h"
#include<avr/io.h>
#define F_CPU 12000000
#include<util/delay.h>

int main (void)
{
	u8 x1,x2,x3,x4;
    //7seg output  (1)
	SET_BIT(DDRD,0);
	SET_BIT(DDRD,1);
	SET_BIT(DDRD,2);
	SET_BIT(DDRD,3);
	SET_BIT(DDRD,4);
	SET_BIT(DDRD,5);
	SET_BIT(DDRD,6);
	SET_BIT(DDRD,7);
	//dip switch input (0)
	CLEAR_BIT(DDRA,0);
	CLEAR_BIT(DDRA,1);
	CLEAR_BIT(DDRA,2);
	CLEAR_BIT(DDRA,3);
	//pull up turn on (port high)
	SET_BIT(PORTA,0);
	SET_BIT(PORTA,1);
	SET_BIT(PORTA,2);
	SET_BIT(PORTA,3);
	while(1)
	{

		x1=GET_BIT(PINA,0);
		if(x1==0)  //pull down
		{
			PORTD=0b00000001;
			_delay_ms(500);
			PORTD=0b00000000;
			PORTD=0b00000001;
			_delay_ms(500);
			PORTD=0b00000000;



		}
		else
		{
			PORTD=0b00000000;
		}


	}

return 0;


}
